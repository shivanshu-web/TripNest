<% layout("/layouts/boilerplate.ejs")%>

    <body>

        <div class="row mt-3 ">

            <div class="col-8 offset-2">


                <h3>Create a new listing</h3>
                <form method="post" action="/listings">

                    <div class="mb-3">
                        <label for="tital" class="form-label">Title</label>
                        <input type="text" name="listing[title]" id="" placeholder="Enter  the title"
                            class="form-control">
                    </div>


                    <div class="mb-3">

                        <label for="text-area" class="form-label"> Discription</label>
                        <textarea type="text" class="form-control" placeholder="Enter the description"
                            name="listing[description]"></textarea>
                    </div>
 
                    <div class="mb-3">
                        <label for="url" class="form-label">Image Link </label>
                        <input class="form-control" name="listing[image]" id="" placeholder="Enter image url">
                    </div>

                    <div class="row">  

                        <div class="mb-3 col-md-4">
                            <label for="url" class="form-label">Price </label>
                            <input type="number" class="form-control" name="listing[price]" placeholder="Enter price">
 
                        </div>

                        <div class="mb-3 col-md-8">
                            <label for="url" class="form-label">Country </label>
                            <input type="text" class="form-control" name="listing[country]"
                                placeholder="Enter your country">
                        </div>

                    </div>



                    <div class="mb-3">
                        <label for="url" class="form-label">Location </label>

                        <input type="text" class="form-control" name="listing[location]" placeholder="enter location">

                    </div>



                    <button class="btn mt-3 btn-dark add-btn">ADD</button>
                 
                </form>
            </div>
        </div>

    </body>